@using SecurityMine.Models
@model SendMessageValidation
@{
    ViewBag.Title = "SendMessageToUser";
}

<h2>SendMessageToUser</h2>

@using (Html.BeginForm("SendMyMessage", "FileManage", FormMethod.Post))
{
    @Html.LabelFor(u => u.UserName)
    <br />
    @Html.TextBoxFor(u => u.UserName, new { value = ViewBag.UserName, @readonly = true })
    @Html.ValidationMessageFor(u => u.UserName, "", new { @class = "text-danger" })

    <br />
    @Html.LabelFor(m => m.Message)
    <br />
    @Html.TextAreaFor(m => m.Message)
    @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
    <br />
    <input type="submit" value="Send My Message" class="btn btn-primary" />
}

